---
import type { Lang } from "../lib/microcms";

interface Props {
  lang: Lang;
  mainCopy: string;
  subCopy: string;
}

const { lang, mainCopy, subCopy } = Astro.props;
const spSubCopy = lang === "ja"
  ? subCopy.replace("を、", 'を、<br class="sp-br">')
  : subCopy;
---

<div class="catchcopy" data-lang={lang}>
  <h1 set:html={mainCopy} />
  <p set:html={spSubCopy} />
</div>

<style>
  .catchcopy {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 80px 0;
    text-align: center;
    max-width: var(--max-width);
    margin: 0 auto;
  }

  .catchcopy h1 {
    font-size: 32px;
    font-weight: 500;
    letter-spacing: 0.12em;
    line-height: 1.6;
    color: #585858;
  }

  .catchcopy p {
    font-size: 16px;
    letter-spacing: 0.08em;
    line-height: 2;
    color: #585858;
    margin-top: 20px;
  }

  /* JA specific */
  .catchcopy[data-lang="ja"] p {
    text-align: left;
  }

  /* EN specific */
  .catchcopy[data-lang="en"] h1 {
    letter-spacing: 0.08em;
  }

  .catchcopy[data-lang="en"] p {
    text-align: left;
    letter-spacing: 0.05em;
    max-width: 640px;
  }

  :global(.sp-br) {
    display: none;
  }

  /* SP */
  @media (max-width: 768px) {
    .catchcopy {
      padding: 50px var(--sp-padding);
    }

    .catchcopy h1 {
      font-size: 22px;
    }

    .catchcopy p {
      font-size: 14px;
    }

    .catchcopy[data-lang="ja"] p {
      text-align: center;
    }

    :global(.sp-br) {
      display: block;
    }
  }
</style>
