---
import type { Lang, AboutResponse } from "../lib/microcms";
import { localized, isSafeUrl } from "../lib/microcms";

interface Props {
  lang: Lang;
  data: AboutResponse;
}

const { lang, data } = Astro.props;
---

<section class="about" id="about" data-lang={lang}>
  <div class="about-content">
    <img
      class="about-image"
      src={data.image.url}
      alt={localized(data, "imageAlt", lang)}
      width={data.image.width}
      height={data.image.height}
    />
    <div class="about-body">
      <div class="section-heading">
        <h2>{localized(data, "heading", lang)}</h2>
      </div>
      <p class="about-text">{localized(data, "body", lang)}</p>
      <div class="about-buttons">
        {data.links.map((link) => {
          const url = localized(link, "url", lang);
          const label = localized(link, "label", lang);
          return isSafeUrl(url) ? (
            <a href={url} class="btn-outline" target="_blank" rel="noopener">
              {label}
              <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M3 8h10M9 4l4 4-4 4" stroke="#585858" stroke-width="1" />
              </svg>
            </a>
          ) : null;
        })}
      </div>
    </div>
  </div>
</section>

<style>
  .about {
    padding: 120px 0;
    background: #f7f7f7;
    max-width: var(--max-width);
    margin: 0 auto;
  }

  .about-content {
    display: flex;
    gap: 80px;
    width: 1024px;
    margin: 0 auto;
  }

  .about-image {
    flex: 1;
    min-width: 0;
    aspect-ratio: 3 / 4;
    object-fit: cover;
  }

  .about-body {
    display: flex;
    flex-direction: column;
    justify-content: center;
    flex: 1;
    min-width: 0;
  }

  /* About内の見出しは左寄せ（globalのcenter指定を上書き） */
  .about-body .section-heading {
    align-items: flex-start;
  }

  .about-body .section-heading h2 {
    text-align: left;
  }

  .about-text {
    font-size: 15px;
    letter-spacing: 0.08em;
    line-height: 2;
    color: #585858;
    margin-bottom: 50px;
  }

  .about-buttons {
    display: flex;
    gap: 24px;
  }

  /* EN specific */
  .about[data-lang="en"] .about-text {
    letter-spacing: 0.05em;
  }

  /* SP */
  @media (max-width: 768px) {
    .about {
      padding: 60px var(--sp-padding);
    }

    .about-content {
      flex-direction: column;
      gap: 30px;
      width: 100%;
      padding: 0 20px;
    }

    .about-image {
      aspect-ratio: 1 / 1;
    }

    .about-body .section-heading {
      align-items: center;
    }

    .about-body .section-heading h2 {
      text-align: center;
    }

    .about-text {
      font-size: 14px;
      margin-bottom: 30px;
    }

    .about-buttons {
      flex-direction: column;
      align-items: center;
      gap: 20px;
    }
  }
</style>
