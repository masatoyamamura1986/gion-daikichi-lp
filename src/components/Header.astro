---
import type { Lang } from "../lib/microcms";

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
---

<div class="header-nav">
  <div class="lang-switch">
    {lang === "ja" ? (
      <span class="active">JP</span>
      <span class="separator">/</span>
      <a href="/en/">EN</a>
    ) : (
      <a href="/">JP</a>
      <span class="separator">/</span>
      <span class="active">EN</span>
    )}
  </div>
  <button class="hamburger" id="hamburger" type="button" aria-label={lang === "ja" ? "メニューを開く" : "Open menu"} aria-expanded="false">
    <span></span>
    <span></span>
  </button>
</div>

<style>
  .header-nav {
    position: fixed;
    top: 32px;
    right: 40px;
    display: flex;
    align-items: center;
    gap: 20px;
    z-index: 100;
  }

  .lang-switch {
    display: flex;
    align-items: center;
    gap: 4px;
    font-size: 12px;
    letter-spacing: 0.05em;
    color: #585858;
  }

  .lang-switch a {
    color: #585858;
    transition: opacity 0.3s;
  }

  .lang-switch a:hover {
    opacity: 0.6;
  }

  .lang-switch .active {
    font-weight: 600;
  }

  .lang-switch .separator {
    color: #585858;
    opacity: 0.4;
  }

  .hamburger {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 8px;
    width: 36px;
    height: 36px;
    cursor: pointer;
    background: none;
    border: none;
    padding: 0;
  }

  .hamburger span {
    display: block;
    width: 100%;
    height: 1px;
    background: #585858;
  }

  /* SP */
  @media (max-width: 768px) {
    .header-nav {
      top: 20px;
      right: 20px;
      gap: 16px;
    }
  }
</style>
